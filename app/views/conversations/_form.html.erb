<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>

    <div class="form-group">
      <%= f.label :recipients %>
      <%= f.select(:recipients, User.all.collect {|p| [ p.first_name, p.id ] }, {}, { multiple: true , class: "form-control" })%>
    </div>

    <div class="form-group">
      <%= f.label :subject %>
      <%= f.text_field :subject, placeholder: "Sujet", class: "form-control", style:"height: 40px; font-size: 18px;" %>
    </div>

    <div class="form-group">
      <%= f.label :message %>
      <%= f.text_area :body, class: 'form-control', style:"height: 40px; font-size: 18px;", placeholder: "Tapez votre message", rows: 4  %>
    </div>

    <%= f.submit "Envoyer", class: "btn btn-success", style:"height: 40px; font-size: 18px;" %>

<% end %>