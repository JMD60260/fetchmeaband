<%if @receipts == nil%>
<p>Vous n'avez aucun message</p>

<%else%>
<% @receipts.each do |receipt| %>
<% message = receipt.message %>

<div class="media">

  <div class="media-left">
    <!-- user avators can go here -->
    <%= image_tag "mystere1.png", size: "64x64", alt: 'avatar' %>
  </div>

  <div class="media-body">
    <h4 class="media-heading">
      <%= message.sender.first_name %>
      <small><b>Subject: </b><%= message.subject %></small><br>
      <small><b>Date: </b><%=  message.created_at.strftime("%A, %b %d, %Y at %I:%M%p") %></small>
    </h4>
    <%= message.body %>
  </div>

</div>

<% end %>
<%end%>