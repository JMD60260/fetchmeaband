
<main class="main minh-100vh">
	<section>
		<div class="container">

				<div class="col text-center">
					<h3 class="my-0 fs-1 fw-medium text-secondary text-uppercase">En un clic</h3>
					<h2 class="mb-5 fw-medium text-primary text-uppercase">Cr√©ez un nouveau topic !</h2>
				</div>


			<div class="row no-gutters pt-6 py-lg-7 align-items-center justify-content-center">
				<div class="col-md-8 col-lg-6 col-xl-7">

					<%= form_tag url_for(action: 'create'), method: "post" do %>
					
						<div class="form-group mb-4">
							<%= label_tag 'Topic' %>
							<%= text_field_tag 'topic', @new_forum.topic, class: "form-control form-control-lg" %>
						</div>
						<div class="form-group mb-4">
							<%= label_tag 'Description' %>
							<%= text_area_tag 'description', @new_forum.topic, class: "form-control form-control-lg" %>
						</div>




						<%= submit_tag "submit", class: "btn btn-primary btn-lg px-6"%>
					
					<% end %>
				</div>
			</div>
		</div>
	</section>
</main>