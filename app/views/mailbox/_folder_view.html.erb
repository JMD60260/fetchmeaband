<div class="row">
  <div class="spacer"></div>
  <div class="col-md-12">
    <!-- we'll configure this to compose new conversations later -->
    <br><br><br>
    <%= link_to "Envoyer un message", new_conversation_path, class: "btn btn-primary" %>
    <div class="spacer"></div>
    <br><br>
  </div>

  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= render 'mailbox/folders' %>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <div class="panel panel-default card">
      <div class="card-body">
        <% if is_conversation %>
        <%= render 'conversations/form' %><br><br><br>
        <% else %>
        <%= render partial: 'conversations/conversation', collection: messages %>
        <% end %>
        <br><br><br>
      </div>
    </div>
  </div>

</div>