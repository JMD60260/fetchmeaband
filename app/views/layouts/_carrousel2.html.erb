<div id="carouselExampleInterval" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active" style="background-color:#000" data-interval="3000">
      <%=image_tag("hero_bg_1.jpg", :class=>"d-block w-100", :alt=>"bg1")%>
    </div>
    <div class="carousel-item" data-interval="3000">
      <%=image_tag("hero_bg_2.jpg", :class=>"d-block w-100", :alt=>"bg2")%>
    </div>
    <div class="carousel-item"style="background-color:#000" data-interval="3000">
    <%=image_tag("hero_bg_3.jpg", :class=>"d-block w-100", :alt=>"bg3")%>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleInterval" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleInterval" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>