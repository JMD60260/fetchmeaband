<div class="container">
  <div class="row">
    <% @users.each do |user| %>
    <div class="col-sm-3" style="width: 208">
      <div class="card mx-5"  style="width: 100%; height: 480px;">
        <%= link_to user do %>
        <% if user.avatar.attached? %>
        <div style="height: 213px;">
        <%= image_tag user.avatar.variant(resize: "213x213"), class: "card-img-top img-fluid", alt: 'avatar' %>
      </div>
        <% else %>
        <%= image_tag "mystere1.png", class: "card-img-top img-fluid" %>
        <% end %>
        <% end %>
        <div class="card-body" >
          <h4 class="card-body" style="width: 100%;"><%= user.first_name %></h4>
          <p style="width: 100%;"><%= user.instrument %></p>
          <%= link_to "Voir le profil", user, class: "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
