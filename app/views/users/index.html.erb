<main class="main minh-100vh">
  <section>
    <div class="container">
      <div class="row">
        <div class="col text-center">
          <h3 class="my-0 fs-1 fw-medium text-secondary text-uppercase">Retrouvez</h3>
          <h2 class="mb-5 fw-medium text-primary text-uppercase">Les artistes</h2>
        </div>
      </div>
      <div class="card-columns mt-neg-5">
        <% if @users != nil %>
        <% @users.reverse_each do |user| %>
        <%= link_to user do %>
        <div class="card mt-6">
          <div class="px-3 mt-neg-4">
            <% if user.avatar.attached? %>

          <%= image_tag user.avatar, class:"card-img"%>
          
          
          <% else %>
          <%= image_tag "mystere1.png", class:'card-img' %>
          <% end %>
          </div>
          <div class="card-body">
            <h6 class="card-title mb-0 text-uppercase"><%= user.first_name %></h6>
            <p class="card-text mb-3 fs--1 text-primary fw-bold"><%= user.instrument %></p>
            <p class="card-text fs--1"><%= user.description %></p>
          </div>
        </div>
        <% end %>
        <%end%>
      </div>
      <div class="row justify-content-md-center">
        â€‹<p class="text-center">
          <%= will_paginate @users, :renderer => WillPaginate::ActionView::BootstrapLinkRenderer %>
        </p>
      </div>
      <% else %>
      <% nil %>
      <% end %> 
    </div>
  </section>
</main>