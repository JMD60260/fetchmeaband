<!-- Site Overlay -->



<div class="container no-margin no-padding">
  <div class="card mb-3 no-margin align-items-center">
    <div class="card-body">
      <%= image_tag "Rockband.png", style: 'z-index: 0; width:100%; height:400px;' %>
      <h3 class="display-4 animated fadeInUp" style="font-family:'gill sans'; text-align:center; margin: -150px 10px 0px 25px; color: #FFFFFF;">Les Profils Utilisateurs</h3>
      <p class="lead animated fadeInUp" style="font-family:'gill sans'; text-align:center; color: #FFFFFF;">Retrouve ici les Profils des personnes inscrites sur le site</p>
    </div>
    
    <!--page title end-->

    <div class="row">
      <% @users.each do |user| %>
      <div class="col-sm-3 " style="width: 100%">
        <div class="card mx-5"  style="width: 100%; height: 430px;">
          <%= link_to user do %>
          <% if user.avatar.attached? %>
          <div style="height: 213px;">
            <%= image_tag user.avatar.variant(resize: "213x213"), class: "card-img-top img-fluid", alt: 'avatar' %>
          </div>
          <% else %>
          <%= image_tag "mystere1.png", class: "card-img-top img-fluid" %>
          <% end %>
          <% end %>
          <div class="card-body" >
            <h4 class="card-body" style="width: 100%;"><%= user.first_name %></h4>
            <p style="width: 100%;"><%= user.instrument %></p>
            <%= link_to "Voir le profil", user, class: "btn btn-primary btn-block" %>
          </div>
        </div>
      </div>
      <% end %>
    </div>

    <%= will_paginate(@users, :renderer => WillPaginate::ActionView::LinkRenderer) %>
    <!--back to top-->
    <a href="#" class="back-to-top hidden-xs-down" id="back-to-top"><i class="ti-angle-up"></i></a>
    <!-- jQuery first, then Tether, then Bootstrap JS. -->

  </div>
</div>
​</div>
​</div>