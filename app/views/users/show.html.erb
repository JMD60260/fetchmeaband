                        <h3 class="lead">Musicien</h3>
                        <% else %>
                        <h3>Niveau: <%= @user.level %></h3>
                        <% end %>

                        
                        <% if @user.email.empty? %>
                        <p>Email: non renseigné</p>
                        <% else %>
                        <p>Email: <a href="mailto:me@at-enfold.com"><%= @user.email %></a></p>
                        <% end %>

                        <% if @user.instrument == nil %>
                        <p>Instrument: non renseigné</p>
                        <% else %>
                        <p>Instrument: <a href="mailto:me@at-enfold.com"><%= @user.instrument %></a></p>
                        <% end %>

                        <% if @user.genre == nil %>
                        <p>Genre: non renseigné</p>
                        <% else %>
                        <p>Genre favoris: <a href="mailto:me@at-enfold.com"><%= @user.genre %></a></p>
