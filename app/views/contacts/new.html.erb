<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>

      <%= form_for(contact, url: new_contact_path(@contact), html: { method: :put, class: "form-signin mt-3" }) do |f| %>

      <h1 class="h3 mb-3 font-weight-normal text-center">Contactez-Nous</h1>

      <div class="row text-left my-3">
        <div class="col">
          <%= f.label "PrÃ©nom" %>
          <%= f.text_field :firstname, :class => 'form-control'  %>
        </div>
        <div class="col">
          <%= f.label "Nom" %>
          <%= f.text_field :lastname, :class => 'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "Email" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
