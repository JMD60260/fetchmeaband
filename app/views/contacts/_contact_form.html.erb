<div class="container mb-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
    <%= form_for @contact, url: new_contact_path, remote: true do |f| %>

    <div class="col-md-6">
        <%= f.label :name %></br>
        <%= f.text_field  :name, required: true, class: "contact-form-text-area", style:"height: 40px; font-size: 18px;" %></br>

        <%= f.label :email %></br>
        <%= f.text_field :email, required: true, class: "contact-form-text-area", style:"height: 40px; font-size: 18px;" %></br>

        <%= f.label :message %></br>
        <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "contact-form-text-area",
                        placeholder: "Envoie moi un message !"%></br>

      <div class= "hidden">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, :hint => 'Ne laisse pas ce champ vide !' %>
      </div>

        <%= f.submit 'Envoi du message', class: "btn btn-lg btn-primary btn-block", style:"height: 40px; font-size: 18px;" %>
    </div>

    <% end %>

    <div class="col-md-6" id="flash-message">
      <%= render 'flash' %>
    </div>
    </div>
    </div>
    </div>
