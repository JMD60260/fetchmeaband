<hr><center><h1>Bienvenue sur l'événement : <br/><%=@event.title%></h1>
	<br/><% if flash[:alert] != nil %>
<div class='alert alert-primary'>
	<%= flash[:alert] %>
</div>
<% end %><br/>
	<div class="card my-card" style="margin: 5px;">
	<div class="card-body">

		<h6 class="card-subtitle mb-2 text-muted" style="height: 40px; font-size: 18px;">lieu : <%=@event.location%></h6>
		<hr>
		<h6 class="card-subtitle mb-2 text-muted" style="height: 40px; font-size: 18px;">début : <%=@event.message_time%></h6>
		<hr>
		<h6 class="card-subtitle mb-2 text-muted" style="height: 40px; font-size: 18px;">fin : <%=@event.the_end%></h6>
		<hr>
		<h6 class="card-subtitle mb-2 text-muted" style="height: 40px; font-size: 18px;">durée : <%=@event.duration%> minutes</h6>
		<hr>
		<h6 class="card-subtitle mb-2 text-muted" style="height: 40px; font-size: 18px;">description : "<%=@event.description%>"</h6>
		<hr>
		<h6 class="card-subtitle mb-2 text-muted" style="height: 40px; font-size: 18px;">prix : <%=@event.price%> euros</h6>
		<hr>
		<h6 class="card-subtitle mb-2 text-muted" style="height: 40px; font-size: 18px;">créé par : <%=@event.user.first_name%></h6>
		<hr>
		<h6 class="card-subtitle mb-2 text-muted" style="height: 40px; font-size: 18px;">contacter le créateur : <%=@event.user.email%></h6>
		<hr>

	</div>
	</div>
