
<center><h1><%= @forum.topic %></h1></center>
<% @comments.each do |comment| %>

<div class="card border-dark mb-3">
  <div class="card-header"><strong><%=comment.user.first_name%></strong></div>
  <div class="card-body" style="height: 7rem;">
    <p class="card-text" style="width: 100%;"><%=comment.content%></p>
</div>
</div>
<% end %>