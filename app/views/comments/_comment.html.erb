
<section class="pb-0">
  <div class="container">
  	<center><h1><%= @forum.topic %></h1></center>
    <div class="row">
      <%@comments.each do |comment|%>
      <div class="col-lg-8 order-lg-2 pb-6 pb-lg-0">
        <div class="mb-8">
          <h2 class="mb-4 text-uppercase"><%= comment.title %></h2>
          <p class="text-700 fw-medium"><%= comment.content %></p>
          <div class="mt-4 d-flex justify-content-between">
            <div class="w-50">
              <% if comment.user.avatar.attached? %>
              <%= image_tag comment.user.avatar, class:'rounded-circle float-left mr-2', width:'40', height:'40'%>
              <% else %>
              <%= image_tag "mystere1.png", class:'rounded-circle float-left mr-2', width:'40', height:'40'%>
              <% end %>
              <p class="fs--1 lh-13 text-700"><%=comment.user.first_name%><br /><span class="fs--3"><%= comment.created_at %></span></p>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
</div>
</section>