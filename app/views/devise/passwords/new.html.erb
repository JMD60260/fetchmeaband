<div class="the-container" style="margin: 100px;">

<h2>Forgot your password?</h2>


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group" style="width: 25%;">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style:"height: 40px; font-size: 18px;"  %>
  </div>

  <div class="actions mt-5" >
    <%= f.submit "reset password", class: "btn btn-outline-primary", style:"height: 40px; font-size: 18px;" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>