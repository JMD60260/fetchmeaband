<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-signin mt-3" }) do |f| %>

<h1 class="h3 mb-3 font-weight-normal text-center">Edit User</h1>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row text-left my-3">
    <div class="col">
      <%= f.label "Prénom" %>
      <%= f.text_field :first_name, :class => 'form-control'  %>
    </div>
    <div class="col">
      <%= f.label "Nom" %>
      <%= f.text_field :last_name, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

    <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, autofocus: true, autocomplete: "description", class: "form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :age %><br />
    <%= f.number_field :age, autofocus: true, autocomplete: "age", class: "form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: "form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :instrument %><br />
    <%= f.select :instrument, ["Guitare", "Basse", "Piano", "Batterie", "Vocal", "Trompette"], :prompt => 'Select one' %>
    </div>

    <div class="form-group">
    <%= f.label :genre %><br />
    <%= f.select :genre, ["Classique", "Rock", "Pop", "RnB", "Hip-Hop", "Rap", "Folk", "Country", "Variété"], :prompt => 'Select one' %>
    </div>

    <div class="form-group">
    <%= f.label :level %><br />
    <%= f.select :level, ["Débutant", "Amateur", "Professionnel"], :prompt => 'Select one' %>
    </div>

        <div class="form-group">
      <%= f.label "Facebook" %>
      <%= f.text_field :facebook, :class => 'form-control' %>
    </div>

  <div class="form-group">
      <%= f.label "Twitter" %>
      <%= f.text_field :twitter, :class => 'form-control' %>
    </div>


         <div class="form-group">
      <%= f.label "Linked_in" %>
      <%= f.text_field :linkedin, :class => 'form-control' %>
    </div>

       <div class="form-group">
      <%= f.label "Youtube" %>
      <%= f.text_field :youtube, :class => 'form-control' %>
    </div>

          <div class="form-group">
      <%= f.label "Skype" %>
      <%= f.text_field :skype, :class => 'form-control' %>
    </div>


  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <div class="actions mt-5">
    <%= f.submit "Update", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
</div></div></div>