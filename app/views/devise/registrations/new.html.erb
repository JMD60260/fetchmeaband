
<!-- Main Content -->
<main class="main minh-100vh">
  <!-- Section -->
  <section class="py-0">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-6 order-lg-2">
          <div class="row minh-100vh h-100 align-items-center">
            <%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: "col px-lg-6 px-xl-8 px-xxl-11 py-9 py-lg-4" } do |f| %>
            <%= devise_error_messages! %>
            <h1>Inscription</h1>

            <h5 class="mb-5 text-700">Remplissez le formulaire pour nous rejoindre</h5>
                        <div class="form-group mb-4">
             <%= f.label :first_name, "Prénom" %><br />
             <%= f.text_field :first_name, autofocus: true, autocomplete: "prénom", class: "form-control form-control-lg", placeholder: "Prénom" %>
           </div>


            <div class="form-group mb-4">
             <%= f.label :email, "Email" %><br />
             <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg", placeholder: "Adresse email" %>
           </div>
           <div class="form-group mb-4">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg", placeholder:"Mot de passe"%>

          </div>
          <div class="form-group mb-4">
           <%= f.label :password_confirmation %><br />
           <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg", placeholder:"Confirmation" %>

         </div>
         <%= f.submit "Valider", class: "btn btn-lg btn-secondary btn-block mb-4" %>
         <% end %> 


       </div>
     </div>

     <div class="col-lg-6 order-lg-1 px-0 py-9">
      <div class="bg-container overlay overlay-10" style="background-image: url(/img/sign_up.jpg)"></div>
    </div>
  </div>
</div>
</section>
<!-- End of Section -->
</main>